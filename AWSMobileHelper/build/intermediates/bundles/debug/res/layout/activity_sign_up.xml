<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weride.www.awsmobilehelper.auth.signin.userpools.SignUpActivity">

    <TextView
        android:id="@+id/signup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_up_header"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Space
        android:id="@+id/signup_space1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/signup_message"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_text_height"
        android:layout_below="@id/signup_space1"
        android:layout_centerHorizontal="true"
        android:hint="@string/username_text"
        android:inputType="textPersonName" />

    <Space
        android:id="@+id/signup_space2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/signup_username" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_text_height"
        android:layout_below="@id/signup_space2"
        android:layout_centerHorizontal="true"
        android:hint="@string/sign_in_password"
        android:inputType="textPassword"/>

    <Space
        android:id="@+id/signup_space3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/signup_password" />

    <EditText
        android:id="@+id/signup_given_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_text_height"
        android:layout_below="@id/signup_space3"
        android:layout_centerHorizontal="true"
        android:hint="@string/given_name_text"
        android:inputType="textPersonName" />

    <Space
        android:id="@+id/signup_space4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/signup_given_name" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_text_height"
        android:layout_below="@id/signup_space4"
        android:layout_centerHorizontal="true"
        android:hint="@string/email_address_text"
        android:inputType="textEmailAddress" />

    <Space
        android:id="@+id/signup_space5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/signup_email" />

    <EditText
        android:id="@+id/signup_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_text_height"
        android:layout_below="@id/signup_space5"
        android:layout_centerHorizontal="true"
        android:hint="@string/phone_number_text"
        android:inputType="phone"/>

    <Space
        android:id="@+id/signup_space6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_intra_group_separation"
        android:layout_below="@id/signup_phone" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pools_activity_button_height"
        android:layout_below="@id/signup_space6"
        android:layout_centerHorizontal="true"
        android:onClick="signUp"
        android:text="@string/title_activity_sign_up"
        android:textAllCaps="false"
        android:textSize="@dimen/user_pools_activity_button_text_size"/>


</RelativeLayout>
